if tput setaf 1 &> /dev/null; then
	tput sgr0; # reset colors
	bold=$(tput bold);
	reset=$(tput sgr0);
	# Solarized colors, taken from http://git.io/solarized-colors.
	black=$(tput setaf 0);
	blue=$(tput setaf 33);
	cyan=$(tput setaf 37);
	green=$(tput setaf 64);
	orange=$(tput setaf 166);
	purple=$(tput setaf 125);
	red=$(tput setaf 124);
	violet=$(tput setaf 61);
	white=$(tput setaf 15);
	yellow=$(tput setaf 136);
else
	bold='';
	reset="\\e[0m";
	# shellcheck disable=SC2034
	black="\\e[1;30m";
	blue="\\e[1;34m";
	cyan="\\e[1;36m";
	green="\\e[1;32m";
	# shellcheck disable=SC2034
	orange="\\e[1;33m";
	# shellcheck disable=SC2034
	purple="\\e[1;35m";
	red="\\e[1;31m";
	violet="\\e[1;35m";
	white="\\e[1;37m";
	yellow="\\e[1;33m";
fi;

PS1="\\n" # newline
PS1+="\\[${reset}\\][\\[${yellow}\\]\@\\[${reset}\\]]" # Time
PS1+="\\[${reset}\\][\\[${green}\\]\u\\[${reset}\\]]" # User
PS1+="\\[${reset}\\][\\[${blue}\\]\H\\[${reset}\\]]" # Host
PS1+="\\[${reset}\\][\\[${cyan}\\]\W\\[${reset}\\]]" # Working directory
PS1+="\$(prompt_git)\\[${reset}\\]" # Git repo details
PS1+="\\n"
PS1+="\$\\[${reset}\\] "

export PS1
