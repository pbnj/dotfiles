# Git settings
# curl -fsSLo ~/.config/git/prompt https://github.com/git/git/raw/v$(git version | grep git | cut -d" " -f3)/contrib/completion/git-prompt.sh
[ -f "$HOME/.config/git/prompt" ] && source "$HOME/.config/git/prompt"

GIT_PS1_SHOWDIRTYSTATE=true
GIT_PS1_SHOWUNTRACKEDFILES=true
GIT_PS1_SHOWUPSTREAM=auto

# kube prompt
# git clone https://github.com/jonmosco/kube-ps1 ~/.config/kube-ps1
source $HOME/.config/kube-ps1/kube-ps1.sh

PS1='\n\W$(__git_ps1 " (%s)") $(kube_ps1)\n\$ '
# PS1='\n\u@\h \W$(__git_ps1 " (%s)") $(kube_ps1)\n\$ '
# PROMPT_COMMAND='__git_ps1 "\n\u@\h:\w" " $(kube_ps1)\n\\\$ "'
