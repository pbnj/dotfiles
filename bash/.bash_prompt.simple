# Colors
RESET="$(tput sgr0)"
BOLD="$(tput bold)"

# Prompt Status
PROMPT_FAILURE_COLOR="$BOLD$(tput setaf 1)"
PROMPT_SUCCESS_COLOR="$BOLD$(tput setaf 7)"

PROMPT_COMMAND=prompt_command

prompt_command() {
  PS1="$(__git_ps1) "
  [ "$?" != 0 ] && PS1+="$PROMPT_FAILURE_COLOR\$$RESET " || PS1+="$PROMPT_SUCCESS_COLOR\$$RESET "
}
