{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": true,
    "panel": "shared",
    "showReuseMessage": true,
    "clear": true
  },
  "tasks": [
    {
      "label": "jira: list issues",
      "type": "shell",
      "command": "jira issue",
      "problemMatcher": []
    },
    {
      "label": "jira: list projects",
      "type": "shell",
      "command": "jira project",
      "problemMatcher": []
    },
    {
      "label": "jira: view issue ...",
      "type": "shell",
      "command": "jira issue ${input:jiraIssue}",
      "problemMatcher": [],
      "dependsOn": ["jira: list issues"]
    },
    {
      "label": "gl: list pipelines",
      "type": "shell",
      "command": "glab pipe list",
      "problemMatcher": []
    },
    {
      "label": "gl: log ci pipelines",
      "type": "shell",
      "command": "glab pipe ci trace",
      "problemMatcher": []
    },
    {
      "label": "gl: list issues",
      "type": "shell",
      "command": "glab issue list",
      "problemMatcher": []
    },
    {
      "label": "gl: view issue ...",
      "type": "shell",
      "command": "glab issue view ${input:number}",
      "problemMatcher": [],
      "dependsOn": ["gl: list issues"]
    },
    {
      "label": "gl: list merge requests",
      "type": "shell",
      "command": "glab mr list",
      "problemMatcher": []
    },
    {
      "label": "gl: view merge request ...",
      "type": "shell",
      "command": "glab mr view ${input:number}",
      "problemMatcher": [],
      "dependsOn": ["gl: list merge requests"]
    },
    {
      "label": "gh: view repo",
      "type": "shell",
      "command": "gh repo view",
      "problemMatcher": []
    },
    {
      "label": "gh: list issues",
      "type": "shell",
      "command": "gh issue list",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "gh: view issue ...",
      "type": "shell",
      "command": "gh issue view ${input:number}",
      "problemMatcher": [],
      "dependsOn": ["gh: list issues"]
    },
    {
      "label": "gh: list pull-requests",
      "type": "shell",
      "command": "gh pr list",
      "problemMatcher": []
    },
    {
      "label": "gh: view pull-request ...",
      "type": "shell",
      "command": "gh pr view ${input:number}",
      "problemMatcher": [],
      "dependsOn": ["gh: list pull-requests"]
    },
    {
      "label": "make: help",
      "type": "shell",
      "command": "make help",
      "problemMatcher": []
    },
    {
      "label": "make ...",
      "type": "shell",
      "command": "make ${input:makeTarget}",
      "problemMatcher": [],
      "dependsOn": ["make: help"]
    },
    {
      "label": "make",
      "type": "shell",
      "command": "make",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "number",
      "type": "promptString",
      "description": "Enter the GitHub/GitLab Issue or MR/PR number"
    },
    {
      "id": "jiraIssue",
      "type": "promptString",
      "description": "Enter the JIRA Issue number"
    },
    {
      "id": "makeTarget",
      "type": "promptString",
      "description": "Enter the make target you'd like to run"
    }
  ]
}
