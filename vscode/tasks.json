{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": true,
    "panel": "shared",
    "showReuseMessage": true,
    "clear": true
  },
  "tasks": [
    {
      "label": "brew upgrade",
      "type": "shell",
      "command": "brew update && brew upgrade && brew cleanup",
      "problemMatcher": []
    },
    {
      "label": "make: help",
      "type": "shell",
      "command": "make help",
      "problemMatcher": []
    },
    {
      "label": "make ...",
      "type": "shell",
      "command": "make ${input:makeTarget}",
      "problemMatcher": [],
      "dependsOn": ["make: help"]
    },
    {
      "label": "make",
      "type": "shell",
      "command": "make",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "makeTarget",
      "type": "promptString",
      "description": "Enter the make target you'd like to run"
    }
  ]
}
