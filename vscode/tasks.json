{
  "version": "2.0.0",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": true,
    "panel": "shared",
    "showReuseMessage": true,
    "clear": true
  },
  "tasks": [
    {
      "label": "dotfiles",
      "type": "shell",
      "command": "code",
      "args": ["~/.dotfiles"],
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "glab: ci status",
      "type": "shell",
      "command": "glab",
      "args": ["ci", "status", "--live"],
      "problemMatcher": [],
      "options": {
        "cwd": "${fileWorkspaceFolder}"
      }
    },
    {
      "label": "brew: upgrade",
      "type": "shell",
      "command": "brew update && brew upgrade && brew cleanup",
      "problemMatcher": []
    },
    {
      "label": "make: help",
      "type": "shell",
      "command": "make",
      "args": ["help"],
      "problemMatcher": [],
      "options": {
        "cwd": "${fileWorkspaceFolder}"
      }
    },
    {
      "label": "make ...",
      "type": "shell",
      "command": "make",
      "args": ["${input:makeTarget}"],
      "problemMatcher": [],
      "options": {
        "cwd": "${fileWorkspaceFolder}"
      }
    },
    {
      "label": "make",
      "type": "shell",
      "command": "make",
      "problemMatcher": [],
      "options": {
        "cwd": "${fileWorkspaceFolder}"
      }
    },
    {
      "label": "Initialize Configs",
      "type": "shell",
      "command": "cp",
      "args": ["-R", "${HOME}/.dotfiles/templates/${input:configName}/", "."],
      "problemMatcher": [],
      "options": {
        "cwd": "${fileWorkspaceFolder}"
      }
    },
    {
      "label": "Okta",
      "type": "shell",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-it",
        "--volume=\"${HOME}/.aws:/root/.aws\"",
        "--volume=\"${HOME}/.okta-aws-login/config.properties:/config.properties\"",
        "registry.zeta.tools/security/okta-aws-login:latest",
        "${input:oktaProfiles}"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "makeTarget",
      "type": "command",
      "command": "shellCommand.execute",
      "args": {
        "command": "make2help",
        "fieldSeparator": ":",
        "description": "Select a make target to execute"
      }
    },
    {
      "id": "configName",
      "type": "command",
      "command": "shellCommand.execute",
      "args": {
        "command": "ls ~/.dotfiles/templates/",
        "description": "Select a config file"
      }
    },
    {
      "id": "oktaProfiles",
      "type": "command",
      "command": "shellCommand.execute",
      "args": {
        "command": "cat ~/.okta-aws-login/config.properties | grep -E '\\[.*\\]' | tr -d '[,]'",
        "description": "Select an Okta Profile"
      }
    }
  ]
}
